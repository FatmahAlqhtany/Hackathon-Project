@{ ViewData["Title"] = "Profile";
    var tweets = (List<TweetModel>)ViewData["Tweets"];
    var user = (Microsoft.AspNetCore.Identity.IdentityUser)ViewData["User"];
    var userId = ViewData["UserId"]; }
<body>
    <!-- component -->
